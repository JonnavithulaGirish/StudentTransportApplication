<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Cp_Notifiaction"
    android:background="#f2f2f2"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="120dp"
       >


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Pro_Pic"
        android:layout_margin="15sp"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="100sp"
       app:civ_border_color="#b1aeae"
        app:civ_border_width="1sp"
        android:src="@drawable/funkyprofile32"
       />
</LinearLayout>

<LinearLayout
        android:id="@+id/textView"
        android:layout_width="0sp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:layout_height="120dp"
        android:weightSum="16"
        android:padding= "20sp">


        <TextView
            android:id="@+id/Pro_UserName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="Girish Jonnavithula"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Notification_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:textSize="16sp"
            android:text="Has initated cabPool from Shiv Nadar University to Indraprasth "
            android:textStyle="italic"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="3"
        >
        <TextView
            android:id="@+id/time_req"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="X:xx am"/>
        <TextView
            android:id="@+id/date_req"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="xx/xx/xx"/>
    </LinearLayout>


   </LinearLayout>

</LinearLayout>