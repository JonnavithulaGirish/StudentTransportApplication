<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="2"
    android:orientation="horizontal"
    android:weightSum="3"
    android:background="#ffffff"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Pro_Pic1"
       android:padding="10sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        app:civ_border_color="#b1aeae"
        app:civ_border_width="1sp"
        android:src="@drawable/funkyprofile32"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Pro_Pic2"
        android:padding="10sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        app:civ_border_color="#b1aeae"
        app:civ_border_width="1sp"
        android:src="@drawable/funkyprofgirl128"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Pro_Pic3"
        android:padding="10sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        app:civ_border_color="#b1aeae"
        app:civ_border_width="1sp"
        android:src="@drawable/decentprof128"
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="#ffffff"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Pro_Pic4"
            android:padding="10sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:civ_border_color="#b1aeae"
            app:civ_border_width="1sp"
            android:src="@drawable/decentprofgirl128"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Pro_Pic5"
            android:padding="10sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:civ_border_color="#b1aeae"
            app:civ_border_width="1sp"
            android:src="@drawable/normalprof128"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Pro_Pic6"
            android:padding="10sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:civ_border_color="#b1aeae"
            app:civ_border_width="1sp"
            android:src="@drawable/normalprofgirl128"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">
        <Button
            android:id="@+id/cancel_propic"
            android:background="#cfcfcc"
            android:layout_width="0sp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:text="cancel"
            />
        <Button
            android:id="@+id/Set_Propic"
            android:background="#eeff00"
            android:layout_width="0sp"
          android:layout_weight=".5"
            android:layout_height="match_parent"
            android:text="Select Profile Picture"
            />

</LinearLayout>
</LinearLayout>