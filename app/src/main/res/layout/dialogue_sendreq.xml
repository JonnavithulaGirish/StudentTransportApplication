<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:weightSum="1">
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="From:"
            android:textSize="16sp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/sendR_from"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text=""
            android:textSize="16sp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:weightSum="1">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="To:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/sendR_to"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:text=""
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:weightSum="1">
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="Date :"
            android:textSize="16sp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/calander_use"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:background="#fffc4c"
            android:layout_weight=".5"
            android:text="set Date"
            android:textSize="16sp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:weightSum="1">
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="Time :"
            android:textSize="16sp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/time_travel"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:textSize="16sp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:weightSum="1">
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="Mobile number :"
            android:textSize="16sp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/mobile_info"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:textSize="16sp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:weightSum="1">
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="Seats available :"
            android:textSize="16sp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/seats_avail"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:textSize="16sp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:id="@+id/dialogCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:background="#cdf4ef"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/dialogButton"
            android:text="Submit"
            android:background="#fffc4c"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
